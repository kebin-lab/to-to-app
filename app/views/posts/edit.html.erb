<div class="edit-wrapper">
    <div class="container">
        <h1>投稿の編集</h1>
        <p>投稿を編集するページです</p>
        <%=form_tag("/posts/#{@post.id}/update") do %>
        <div>
            <textarea name="content"><%=@post.content%></textarea>
            <input type="submit" value="保存する">
        </div>
        <% end %>
    </div>
</div>