<div class="mx-auto" style="width: 300px;">
    <h1 class="mt-3">ユーザ一覧</h1>
    <p>ユーザを一覧で表示します</p>
        <div class="container">
        <div class="row">
        <% @users.each do |user| %>
        <div class="card mb-3">
            <img class="card-img-top" src="/images/<%=user.image%>" alt="">
            <div class="card-body">
                <p class="card-text"><%=link_to("#{user.name}","/users/#{user.id}")%></p>
                <p class="card-text"><%=user.created_at%></p>
            </div>
        </div>
        <div class="text-center">    
        <% end %>
        </div>
        </div>
</div>
